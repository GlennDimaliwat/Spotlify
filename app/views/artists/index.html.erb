<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<% @artists.each do |artist| %>
  <div class="artists">
    <h2><%= link_to artist.name, artist %></h2>
    <p><%= artist.genre %> |
    <%= link_to "<button>Edit</button>".html_safe, edit_artist_path(artist) %>
    <%= link_to "<button>Delete</button>".html_safe, artist, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>

<br>

<nav><%= link_to "<button>Add New Artist</button>".html_safe, new_artist_path %></nav>