<p id="notice"><%= notice %></p>


<h1>
  <%= @artist.name %>
</h1>

<div class="artists">
<p>
  <strong>Bio:</strong>
  <%= @artist.bio %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @artist.genre %>
</p>

<h2>Songs</h2>
<% @songs.each do |song| %>
  <p><%= link_to song.name, song %></p>
<% end %>
</div>

<nav>
  <%= link_to "<button>Edit Song</button>".html_safe, edit_artist_path(@artist) %>
  <%= link_to "<button>Back</button>".html_safe, artists_path %>
</nav>