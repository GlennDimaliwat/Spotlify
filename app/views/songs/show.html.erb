<h1 class="<%= format_color_scheme @song.released_at %>">
  <%= @song.name %>
</h1>

<div class="songs">
  <p id="notice"><%= notice %></p>
    
  <p>
    <strong>Artist:</strong>
    <%= link_to @song.artist.name, @song.artist %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= format_duration @song.duration  %>
  </p>

  <p>
    <strong>Released at:</strong>
    <%= @song.released_at %>
  </p>
</div>

<nav>
  <%= link_to "<button class=\"#{format_color_scheme @song.released_at}\">Play Song</button>".html_safe, play_song_url(@song) %>
  <%= link_to "<button class=\"#{format_color_scheme @song.released_at}\">Edit Song Info</button>".html_safe, edit_song_path(@song) %>
  <%= link_to "<button class=\"#{format_color_scheme @song.released_at}\">Back</button>".html_safe, songs_path %>
</nav>